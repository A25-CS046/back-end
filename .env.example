# ================================
# Environment Variables for Cloud Run Deployment
# ================================

# Application
NODE_ENV=production
PORT=8080

NODE_ENV=development
PORT=5000

JWT_SECRET=your-secure-jwt-secret

# Frontend URL for CORS (your deployed frontend URL)
FRONTEND_URL=https://your-frontend-app.web.app
ML_URL = https://your-ml-app.web.app

# ================================
# Database Configuration
# ================================

# Cloud SQL Connection Name (format: project:region:instance)
CLOUD_SQL_CONNECTION_NAME=your-project:us-central1:your-instance

# Database Credentials
DB_USER=postgres
DB_PASSWORD=your-secure-password
DB_NAME=predictive_maintenance

# ================================
# For Development Only (not needed in production)
# ================================

# DATABASE_URL=postgresql://postgres:password@localhost:5432/predictive_maintenance
