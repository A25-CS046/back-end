generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?  // Tanda '?' berarti opsional (boleh NULL)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users") // rename nama table supaya plural di database
}